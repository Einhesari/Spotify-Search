<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="item"
            type="com.example.spotifysearch.model.item.Track" />


    </data>

    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recyclerview_item_back"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:imageUrl="@{item.album.images.isEmpty() ?  @string/no_photo_url : item.album.images.get(0).url}"
            android:background="@drawable/recyclerview_item_back" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/img"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:maxLines="1"
                android:text="@{item.name}"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/img"
                android:text="@{item.type.substring(0,1).toUpperCase() + item.type.substring(1) +` by ` +item.artists.get(0).name}"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>
    </RelativeLayout>
</layout>
